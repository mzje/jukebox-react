upstream app {
  server unix:/var/www/jukebox/shared/sockets/unicorn.sock fail_timeout=0;
}

server {
  listen                80;

  server_name <%= vhost_server_name %>.local 192.168.1.221;
  root <%= current_path %>/public;

  try_files $uri/index.html $uri @app;

  access_log /var/log/nginx/<%= vhost_server_name %>_access.log combined;
  error_log /var/log/nginx/<%= vhost_server_name %>_error.log;

  location @app {
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;

  # serve static content directly
  location ~* \.(ico|jpg|gif|png|swf|html)$ {
    if (-f $request_filename) {
      expires max;
      break;
    }
  }
}
