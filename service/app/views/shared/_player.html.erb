<div class="player"><div>

  <div id="volume_control">
    <label for="volume">Volume</label>
    <i class="fa fa-volume-down"></i>
    <input id="volume" type="range" min="0" max="100" value="50" />
    <i class="fa fa-volume-up"></i>
  </div>

  <div class="status">
    <div class="artwork-background" style="<%= @current_song && @current_song.artwork_url.present? ? "background-image: url(#{@current_song.artwork_url})" : '' %>"></div>
    <div class="artwork-container">
      <a href="#" data-artwork="false" id="artwork_link"><%= image_tag(NO_ARTWORK_IMAGE, class: "artwork no-artwork") %></a>
      <span class="unrated"></span>
    </div>

    <h2 id="current_track"></h2>
    <p id="current_artist"></p>
    <p id="current_album"></p>
    <p class="chosen_by">Chosen by <%= current_owner(@current_song) %></p>


    <div id="time_details"><progress id="progressbar"></progress></div>
    <div id="time_elapsed" data-time='0'></div>
    <div id="time_total" data-duration='0'></div>

    <p id="track-source"><span></span></p>
  </div>

  <div id="rating">
    <div id="voting_container">
      <a href="#" id="vote_up"><i class="fa fa-thumbs-o-up"></i></a>
      <a href="#" id="vote_down"><i class="fa fa-thumbs-o-down"></i></a>
    </div>
  </div>

  <div class="player-download" style="<%= (@current_song && @current_track.try(:local?)) ? '' : 'display:none;' %>">
    <% if @current_song && @current_track.try(:local?) %>
      <%= link_to '<i class="fa fa-cloud-download"></i> Download track'.html_safe,
        downloads_url(file: @current_song.file), download: true %>
    <% else %>
      <%= link_to '<i class="fa fa-cloud-download"></i> Download track'.html_safe, '' %>
    <% end %>
  </div>

  <div id="status_updates"></div>

  <div class="controls">
    <div class="player-controls">
      <button id="previous"><i class="fa fa-step-backward"></i> <span>Previous track</span></button>
      <%= link_to_play_pause(@status) %>
      <button id="next"><i class="fa fa-step-forward"></i> <span>Next track</span></button>
    </div>
    <button id="clear_playlist">Clear playlist</button>
  </div>

</div></div>
