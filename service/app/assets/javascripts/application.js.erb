Handlebars.registerHelper('url_encoder', function(file) {
  return new Handlebars.SafeString(encodeURIComponent(file));
});

Handlebars.registerHelper('if', function(conditional, options) {
  if(conditional) {
    return options.fn(this);
  }
});

